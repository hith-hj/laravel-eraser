{
    "name": "hith/laravel-eraser",
    "description": "A Laravel package for erasing models and related data safely.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "hith-hj",
            "email": "hjhaithem@gmail.com"
        }
    ],
    "keywords": ["laravel", "eloquent", "relations", "eraser", "delete", "cleanup"],
    "require": {
        "php": "^8.2",
        "eventsauce/object-hydrator": "^1.7",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.25",
        "orchestra/testbench": "^10.6",
        "pestphp/pest": "^3.8"
    },
    "scripts": {
        "lint": "pint",
        "test": "pest",
        "test:p": "pest -p",
        "check": [
            "@lint",
            "@test:p"
        ]
    },
    "autoload": {
        "psr-4": {
            "Eraser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eraser\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eraser\\Providers\\EraserServiceProvider"
            ],
            "aliases": {
                "Erase": "Eraser\\Facades\\Erase"
            }
        }
    },
    "prefer-stable": true
}
